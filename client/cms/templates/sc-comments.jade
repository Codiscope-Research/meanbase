#sc-backend-wrapper
    h1 Comments
    #sc-form-group-comment-search.sc-form-group
        input#sc-comment-search.sc-search.sc-with-icon(type='search', name='sc-comment-search', placeholder='Filter Comments')
    label(for='sc-comment-search')
    .sc-panel(ng-repeat="comment in comments")
        .sc-panel-head
            .sc-panel-title.sc-6
                img.sc-panel-image-thumbnail(src='')
                span.sc-user-name {{comment.author}}
            .sc-panel-righthand.sc-6.sc-panel-toggle
                | Post Name
                i.fa.fa-caret-right.sc-panel-toggle-caret
        .sc-panel-body
            button.sc-email-preferences Email Preferences
            button.sc-delete-user Delete
            input.sc-save-user(type='submit', value='Save')
