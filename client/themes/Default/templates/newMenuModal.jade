#newMenuItemModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='newMenuItemLabel', aria-hidden='true')
	.modal-dialog
		.modal-content
			.modal-header
				button.close(type='button', data-dismiss='modal')
					span(aria-hidden='true') Ã—
					span.sr-only Close
				h4#newMenuItemLabel.modal-title New Menu Item
			.modal-body
				.form-group
					label(for="menu-url") Url
					input.form-control(id="menu-url" ng-model="newItemInfo.url")
				.form-group
					label(for="menu-title") Title
					input.form-control(id="menu-title" ng-model="newItemInfo.title")
				.form-group
					label(for="menu-classes") Classes
					input.form-control(id="menu-classes" ng-model="newItemInfo.classes")
				.form-group
					label(for="menu-target") Target
					select#menu-target(ng-model="newItemInfo.target")
						option(value="_blank") _blank
						option(value="_self") _self
			.modal-footer
				button.btn.btn-default(type='button', data-dismiss='modal') Close
				button.btn.btn-default(ng-click="newMenuItem(newItemInfo)") Save