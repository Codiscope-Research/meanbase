//Static navbar 
.nav.navbar.navbar-default(role='navigation')
	.container-fluid
		.navbar-header
			button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
				span.sr-only Toggle navigation
				span.icon-bar
				span.icon-bar
				span.icon-bar
			a.navbar-brand(href='/') Home
		#navbar.navbar-collapse.collapse
			ul#sortable-head.nav.navbar-nav(data-menu="main" ng-sortable="sortableMenus")
				li(ng-repeat="menu in menus.main" class="mb-draggable {{menu.classes}}" when-active data-id="{{menu.id}}")
					a(href="{{menu.url ? menu.url : /}}" target="{{menu.target}}").mb-editable.mb-main-list-a {{menu.title}}
			ul.nav.navbar-nav
				li.drop-down.mb-unsortable
					a(data-toggle="dropdown" href="#").dropdown-toggle.mb-unsortable
						| Blog
						span.caret
					ul#sortable-footer.dropdown-menu(role="menu" data-menu="footer" ng-sortable="sortableMenus")
						li(ng-repeat="menu in menus.footer" data-id="{{menu.id}}").mb-draggable
							a(href="{{menu.url ? menu.url: /}}" target="{{menu.target}}").mb-editable.mb-footer-list-a {{menu.title}}