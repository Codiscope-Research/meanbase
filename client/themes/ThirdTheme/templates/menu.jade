//Static navbar 

.nav.navbar.navbar-default(role='navigation')
	.container-fluid
		.navbar-header
			button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
				span.sr-only Toggle navigation
				span.icon-bar
				span.icon-bar
				span.icon-bar
			a.navbar-brand(href='/') Home
		#navbar.navbar-collapse.collapse
			ul#sortable-head.nav.navbar-nav(data-menu="main")
				li(ng-repeat="menu in menus.main" data-id="{{menu.position}}").mb-draggable
					a(href="{{menu.url ? menu.url : /}}").mb-editable.mb-main-list-a {{menu.title}}
				li.drop-down
					a(data-toggle="dropdown" href="#").dropdown-toggle 
						| Blog
						span.caret
					ul#sortable-footer.dropdown-menu(role="menu" data-menu="footer")
						li(ng-repeat="menu in menus.footer" data-id="{{menu.position}}").mb-draggable
							a(href="{{menu.url ? menu.url: /}}").mb-editable.mb-footer-list-a {{menu.title}}